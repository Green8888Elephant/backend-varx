{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true,
      "minLength": 5,
      "maxLength": 50
    },
    "content": {
      "type": "text",
      "minLength": 100,
      "required": true
    },
    "ratings": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    }
  }
}
